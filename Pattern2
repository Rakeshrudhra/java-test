public class Pattern{
public static void main(String[]args){
Scanner sc=new Scanner(system.in);
System.out.println("Enter the number ");
int x= sc .nextInt();
int y=x+x;
for(int i=0;i<x;i++){
for(int j=0;j<i;j++){
System.out.print("");
}
for(int j=i;j=x;j++){
if(i==j){
System.out.print (j+"");
}
else{
System.out.print(y);
y--;
}
System.out.println();
}
}
